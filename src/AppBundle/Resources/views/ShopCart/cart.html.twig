{% extends 'AppBundle::base.html.twig' %}

{% block body %}
<div class="cart row">

    <div class="col-md-12">
        <div class="steps row">
            <div class="col-md-4"><span class="step">1 Způsob dopravy a platby</span></div>
            <div class="col-md-4"><span class="step">2 Dodací a fakturační údaje</span></div>
            <div class="col-md-4"><span class="step">3 Shrnutí a platba</span></div>
        </div>
    </div>

    <div class="col-md-8">

        <h3><i class="fas fa-shopping-basket"></i>Můj košík</h3>

        {% for label, messages in app.flashes %}
            {% for message in messages %}
            <div class="alert alert-{{ label }}" role="alert">{{ message }}</div>
            {% endfor %}
        {% endfor %}

        {% if cart.items.count %}

            {% include 'AppBundle:ShopCart/boxes:step1-items.html.twig' with {'cart': cart} %}

            {% include 'AppBundle:ShopCart/boxes:step1-shipping-payment.html.twig' with {'cart': cart, 'shippings': shippings, 'payments': payments} %}

            {% include 'AppBundle:ShopCart/boxes:step1-total.html.twig' with {'cart': cart} %}

            <a class="btn btn-success" href="{{ path('shop_customer') }}">Pokračovat k dodacím údajům</a>

        {% else %}

            <p>Váš košík je prázdný</p>

        {% endif %}

        {% if cart.items %}

            {#
            <table class="items" width="100%">
                <tr>
                    <th>Model</th>
                    <th>Název</th>
                    <th>Počet</th>
                    <th>Cena</th>
                    <th>Akce</th>
                </tr>
                {% for item in cart.items %}
                <tr>
                        <td valign="top">{{ item.product.model }}</td>
                    <td>
                        <strong>{{ item.product.name }}</strong>
                        {% if item.attributes %}
                          {% for attribute in item.attributes %}
                              <br />{{ attribute.name }}: {{ attribute.value }}
                          {% endfor  %}
                        {% endif %}
                    </td>
                    <td>{{ item.quantity }}</td>
                    <td>{{ item.price }}</td>
                    <td>smazat</td>
                </tr>
                {% endfor %}
            </table>
            #}



    </div>
    {% else %}
    <p>Váš košík je prázdný</p>
    {% endif %}
</div>
{% endblock %}