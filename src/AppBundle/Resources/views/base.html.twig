<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/styles.css') }}" />
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <header>
            <div class="container">
                <div class="topbar__content row">
                    <div class="col-md-4 col-sm-6 col-6 topbar__logo">
                        <a href="/">
                            <img width="70%" src="{{ asset('images/gowood.svg.png') }}" />
                        </a>
                    </div>
                    <div class="col-md-3 d-sm-none d-none ml-auto d-md-block">
                    </div>
                    <div class="col-md-3 col-sm-6 col-6 ml-auto d-md-block">
                        {% include 'AppBundle:ShopCart/boxes:head-cart.html.twig' %}
                    </div>
                </div>
            </div>

            <div class="separator"></div>
        </header>
        {#
        <div class="container menu">
            <div class="topbar_menu">
                {{ render(controller(
                'AppBundle:ShopCatalog:categories'
                )) }}
            </div>
        </div>
        #}
        <section id="content" class="clearfix">
            <div class="checkout container">

                    {#<div class="col-md-2">
                        <div id="sidebar">
                            {{ render(controller(
                            'AppBundle:ShopCatalog:categories'
                            )) }}
                        </div>
                    </div>#}
                    {% block body %}{% endblock %}
            </div>
        </section>

        <footer>

        </footer>


        {% block javascripts %}
            <script src="{{ asset('js/jquery.min.js') }}"></script>
            <script src="{{ asset('js/editor.js') }}"></script>
            <script src="{{ asset('js/shopping-cart.js') }}"></script>
            <script src="{{ asset('js/jquery.fancybox.min.js') }}"></script>
        {% endblock %}
    </body>
</html>
