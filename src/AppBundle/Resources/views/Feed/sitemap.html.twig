<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    {% for category in categories %}
    <url>
        <loc>{{ app.request.getSchemeAndHttpHost }}{{ path('shop_catalog_list', { slug: category.slug }) }}</loc>
        <changefreq>weekly</changefreq>
    </url>
    {% endfor %}
    {% for product in products %}
        <url>
            <loc>{{ app.request.getSchemeAndHttpHost }}{{ path('shop_catalog_detail', { slug: product.slug }) }}</loc>
            <changefreq>weekly</changefreq>
        </url>
    {% endfor %}
    {% for page in pages %}
        <url>
            <loc>{{ app.request.getSchemeAndHttpHost }}{{ path(page) }}</loc>
            <changefreq>weekly</changefreq>
        </url>
    {% endfor %}
</urlset>