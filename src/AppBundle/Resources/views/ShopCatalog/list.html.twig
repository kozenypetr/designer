{% extends 'AppBundle::base.html.twig' %}

{% block body %}

 <h2 class="product-list-head">{{ category.name }}</h2>

 <div class="product-item-list row">
 {%  for product in category.products %}
   <div class="col-md-3">
       <div class="item">
           <div class="image">
               <a href="{{ path('shop_catalog_detail', { slug: product.slug }) }}">
                  <img width="100%" src="{{ path('image_cache', { id: product.images[0].id, setting: '800x600x1'}) }}" />
               </a>
           </div>
           <h3><a href="{{ path('shop_catalog_detail', { slug: product.slug }) }}">{{ product.name }}</a></h3>
           <p>{{ product.price | round }} Kƒç</p>
           <p><a href="{{ path('shop_catalog_detail', { slug: product.slug }) }}" class="btn btn-primary active">Koupit</a></p>
           {#% for image in product.images %}
               <img width="100" src="{{ path('image_cache', { id: image.id, setting: '300x200x1'}) }}" />
           {% endfor %#}
       </div>
   </div>
 {%  endfor %}
 </div>
{% endblock %}